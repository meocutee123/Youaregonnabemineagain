
@{
    ViewBag.Title = "TimKiemMH";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemMH", "Admin", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center">

                <tr>
                    <td>Tên</td>
                    <td>
                        <input type="text" name="Name" value="@ViewBag.Name" />
                    </td>

                </tr>

                <tr>
                    <td>Giá từ</td>
                    <td>
                        <input type="text" name="PriceMin" value="@ViewBag.PriceMin" />
                        Đến<input type="text" name="PriceMax" value="@ViewBag.PriceMax" />
                    </td>

                </tr>

                <tr>
                    <td>Thương hiệu</td>
                    <td>
                        <input type="text" name="Brand" value="@ViewBag.Brand" />
                    </td>
                </tr>
                <tr>
                    <td>Thể loại</td>
                    <td>
                        <input type="text" name="Category" value="@ViewBag.Category" />
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="submit" value="Tìm kiếm" style="margin-left: 5px;width:100px;
                background-color: blue;color:white" />
                        <input type="button" name="Nhapmoi" value="Nhập mới" style="margin-left: 5px;width:100px;
                background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiemMH", "Admin/TimKiemMH")'" />

                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
            columns: new[]  // colums in grid
            {
                grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                grid.Column("Name","Name"  ),
                grid.Column("Brand.Name","Brand"),
                grid.Column("Category.Name","Category"),
                grid.Column("Price","Giá",format:@<text> @item.Price.ToString("#,##0")</text>)

}
)
    </div>
</body>
</html>
