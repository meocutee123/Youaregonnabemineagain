@model Electronic_Store.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div class="container">
    <div>
        @if (Model.Status != false)
        {

            <h2 class="text-success">Active</h2>
        }
        else
        {
            <h2 class="text-danger">Deleted</h2>
            <style>
                .col-md-4 img {
                    opacity: 0.3;
                    filter: alpha(opacity=40);
                }
            </style>
        }
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">

            @if (Model.ProfileImg != null)
            {
                <img src="@Url.Content(Model.ProfileImg)" style="height:100px" />
            }
            else
            {
                <img src="~/Assets/images/Staffs/anonymous.png" alt="Emty" style="height: 200px" />
            }

        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Full name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                    @Html.DisplayFor(model => model.LastName)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
               
            </dl>


        </div>

    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
