    @model IEnumerable<Electronic_Store.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Products</h2>
@Html.ActionLink("Create new", "Create")
<table class="table table-fluid" id="myTable">
    <thead>
        <tr>
            <th>Product name</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Image</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Brand.Name</td>
            <td>
                <img src="@Url.Content(item.ProductImg)" style="height: 50px" />
            </td>

            @if (item.Status != true)
            {
                <td class="text-danger fa fa-minus-circle fa-2x mr-2"> @Html.ActionLink(" ", "Details", new { id = item.ProductID }, new { @class = "fa fa-info-circle" })</td>
            }
            else
            {
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ProductID }, new { @class = "fa fa-pencil fa-2x mr-2" }) 
                    @Html.ActionLink(" ", "Details", new { id = item.ProductID }, new { @class = "fa fa-info-circle fa-2x mr-2" }) 
                    @Html.ActionLink(" ", "Delete", new { id = item.ProductID }, new { @class = "fa fa-trash fa-2x" })
                </td>
            }

        </tr>

        }

    </tbody>
</table>

