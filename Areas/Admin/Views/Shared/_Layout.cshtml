<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="nav nav-pills nav-justified navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tân Tân Electronics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li class="nav-link">@Html.ActionLink("Home", "Index", "Admin", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Customer", "Index", "Customers", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Brands", "Index", "Brands", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Products", "Index", "Products", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Categories", "Index", "Categories", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Staffs", "Index", "Staffs", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Store", "Index", "Stores", new { area = "Admin" }, null)</li>
                    <li class="nav-link">@Html.ActionLink("Order", "Index", "Orders", new { area = "Sales" }, null)</li>

                    <li class="dropdown">

                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Search</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item">@Html.ActionLink("Product", "TimKiemMH", "Admin", new { area = "Admin" }, null)</a>
                            <a class="dropdown-item">@Html.ActionLink("Staffs", "TimKiemNC", "Admin", new { area = "Admin" }, null)</a>
                        </div>

                    </li>
                </ul>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>